<% if action == 'create' %>
  <% title = 'Create a new band' %>
  <% action = '/bands' %>
  <% submit_value = 'Create Band' %>
<% else %>
  <% title = 'Edit Band' %>
  <% action = '/bands/edit' %>
  <% submit_value = 'Create Band' %>
<% end %> 

<h1><%= title %></h1>
<form action='/bands' method='POST'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for='name'>Name</label>
  <input type="text" id='name' name="band[name]">
  <input type="submit" value='Create Band'>
</form>