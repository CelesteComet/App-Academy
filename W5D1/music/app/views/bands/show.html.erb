<h1><%= @band.name %></h1>
<% if @band.albums.empty? %>
  <p>This band doesn't have any albums yet!</p>
<% else %> 
  <ul>
    <% @band.albums.each do |album| %>
      <li><%= album.title %></li>
    <% end %>
  </ul>
<% end -%>

<h2>Links</h2>
<ul>
  <li>
    <%= link_to 'New Album', new_band_album_url(@band.id) %>
  </li>
  <li>
    <%= link_to 'Edit Band', edit_band_url(@band.id) %>
  </li>
  <li>
    <%= link_to 'Destroy Band', bands_url + "/#{@band.id}" , method: :delete %>
  </li>
  <li>
    <%= link_to 'All Bands', bands_url %>
  </li>
</ul>
